---
interface Props {
  title: string;
  date: string;
  excerpt: string;
  image: string;
}

const { title, date, excerpt, image } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden transform transition-transform hover:scale-105">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <time class="text-sm text-gray-500">{date}</time>
    <h2 class="text-2xl font-bold mt-2 mb-4">{title}</h2>
    <p class="text-gray-600">{excerpt}</p>
    <a href="#" class="inline-block mt-4 text-primary font-medium hover:underline">
      Read more â†’
    </a>
  </div>
</article>