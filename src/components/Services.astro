---
const services = [
  {
    title: 'WEDNESDAY GATHERING',
    image: 'src/assets/youth holding their hands and gather in a vibrant background.png'
  },
  {
    title: 'HOLY MASS & CONFESSION',
    image: 'src/assets/holymass.png'
  },
  {
    title: 'NIGHT VIGIL',
    image: 'src/assets/adoration.png'
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12">OUR INITIATIVES</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="service-card">
          <img src={service.image} alt={service.title} class="w-full h-64 object-cover rounded-lg shadow-lg" />
          <h3 class="text-xl font-bold mt-4">{service.title}</h3>
        </div>
      ))}
    </div>
  </div>
</section>